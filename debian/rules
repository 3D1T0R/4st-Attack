#!/usr/bin/make -f
# Made with the aid of debmake, by Christoph Lameter,
# based on the sample debian/rules file for GNU hello by Ian Jackson.

package=forcedattack2

build:
	$(checkdir)
	touch build

clean:
	$(checkdir)
	-rm -f build
	-$(MAKE) clean
	-rm -f `find . -name "*~"`
	-rm -rf debian/tmp debian/files* core debian/substvars

binary-indep: checkroot build
	$(checkdir)
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch: checkroot build
	$(checkdir)
	-rm -rf debian/tmp
	install -d debian/tmp
	cd debian/tmp && install -d `cat ../dirs`
	$(MAKE) install OWNER=root GROUP=root DESTDIR=`pwd`/debian/tmp PREFIX=/usr
	install -o root -g root -m 644  kde/icons/16x16/forcedattack2.png debian/tmp/usr/share/icons/hicolor/16x16/apps/
	install -o root -g root -m 644  kde/icons/22x22/forcedattack2.png debian/tmp/usr/share/icons/hicolor/22x22/apps/
	install -o root -g root -m 644  kde/icons/32x32/forcedattack2.png debian/tmp/usr/share/icons/hicolor/32x32/apps/
	install -o root -g root -m 644  kde/icons/48x48/forcedattack2.png debian/tmp/usr/share/icons/hicolor/48x48/apps/
	install -o root -g root -m 644  kde/icons/64x64/forcedattack2.png debian/tmp/usr/share/icons/hicolor/64x64/apps/
	install -o root -g root -m 644	kde/menu-items/forcedattack2.desktop debian/tmp/usr/share/applnk/Games/Board/
# Must have debmake installed for this to work. Otherwise please copy
# /usr/bin/debstd into the debian directory and change debstd to debian/debstd
	debstd README.txt changelog.txt 
	dpkg-gencontrol -isp
	chown -R root.root debian/tmp
	chmod -R go=rX debian/tmp
	dpkg --build debian/tmp ..

define checkdir
	test -f debian/rules
endef

binary: binary-indep binary-arch

checkroot:
	$(checkdir)
	test root = "`whoami`"

.PHONY: binary binary-arch binary-indep clean checkroot
